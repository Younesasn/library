{% extends 'base.html.twig' %}

{% block title %}Log in{% endblock %}

{% block body %}
    <form method="post">
        <section class="max-w-screen-xl mx-auto px-4 py-6 sm:px-6 lg:px-8 relative z-10">
            <div class="h-screen w-full flex justify-center items-center">
                <div class="space-y-10 text-center">
                    <h1 class="text-4xl text-center">Se connecter</h1>
                    {% if error %}
                        <div class="p-6 bg-red-500 flex items-center">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">
                            Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
                        </div>
                    {% endif %}
                    <div class="space-y-4">
                        <label for="username">Nom d'utilisateur</label>
                        <input type="text" value="{{ last_username }}" name="_username" id="username" class="rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 p-2.5 w-full" autocomplete="username" required autofocus>
                    </div>

                    <div class="space-y-4">
                        <label for="password">Mot de passe</label>
                        <input type="password" name="_password" id="password" class="rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 p-2.5 w-full" autocomplete="current-password" required>
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <div>
                        <p class="text-center text-sm text-gray-500">Vous n'avez pas de compte ? <a href="{{ path('app_register') }}" class="text-indigo-600 hover:text-indigo-500 transition-all">Créer un compte</a></p>
                    </div>
                    <div>
                        <button class="rounded-md bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Se connecter</button>
                    </div>
                </div>
            </div>
        </section>
    </form>
{% endblock %}
