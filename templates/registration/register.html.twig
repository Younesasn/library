{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}

	{{ form_errors(registrationForm) }}

	<section class="max-x-screen-lg h-screen mx-auto px-4 sm:px-6 lg:px-8 flex justify-center items-center absolute inset-x-0 top-0 z-50">
		<div class="text-center space-y-10 w-[80%]">
			<h1 class="text-4xl">Inscription</h1>
			<div>
				{{ form_start(registrationForm) }}
                {{ form_row(registrationForm.lastname, {
                    label: 'Nom',
                    attr: {
                        placeholder: 'Nom'
                    }
                }) }}
				{{ form_row(registrationForm.firstname, {
                    label: 'Prénom',
                    attr: {
                        placeholder: 'Prénom'
                    }
                }) }}
				{{ form_row(registrationForm.username, {
                    label: 'Nom d\'utilisateur',
                    attr: {
                        placeholder: 'Nom d\'utilisateur'
                    }
                }) }}
				{{ form_row(registrationForm.plainPassword, {
			            label: 'Mot de passe',
                        attr: {
                            placeholder: 'Mot de passe'
                        }
			        }) }}
				{{ form_row(registrationForm.agreeTerms) }}

				<button type="submit" class="rounded-md bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 transition-all">S'inscrire</button>
				{{ form_end(registrationForm) }}
			</div>
		</div>
	</section>
{% endblock %}
