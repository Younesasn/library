{% extends 'base.html.twig' %}

{% block title %}Hello BookController!
{% endblock %}

{% block body %}
	<section class="max-w-screen-xl mx-auto px-4 py-6 sm:px-6 lg:px-8 relative z-10">
        <div class="h-screen w-full flex justify-center items-center">
            <div class="space-y-10 text-center max-w-2xl">
                <h1 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-6xl">Bienvenue dans votre bibliothèque Virtuelle</h1>
