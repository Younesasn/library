{% extends 'base.html.twig' %}

{% block body %}
	{% if books is not empty %}
		<section class="max-w-screen-xl mx-auto px-4 py-6 sm:px-6 lg:px-8">
			<div class="flex justify-center items-center h-screen">
				<div class="space-y-10">
					<h1 class="text-4xl text-center">Mes livres</h1>
					<table class="table-auto">
						<thead>
							<tr class="text-lg">
								<th class="px-5">Titre</th>
								<th class="px-5">Auteur</th>
								<th class="px-5">Description</th>
								<th class="px-5">Date d'ajout</th>
								<th class="px-5">Supprimer</th>
							</tr>
						</thead>
						<tbody>
							{% for book in books %}
								<tr class="text-lg">
									<td class="px-5">{{ book.title }}</td>
									<td class="px-5">{{ book.author }}</td>
									<td class="px-5">{{ book.description }}</td>
									<td class="px-5">{{ book.createdAt|date('d/m/y') }}</td>
									<td class="px-5 text-center">
										<a href="{{ path('app_book_delete', {'id': book.id}) }}" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce livre ?')">
											<i class="fa-solid fa-xmark text-red-500"></i>
										</a>
									</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
					<div class="flex justify-end">
						<a href="{{ path('app_book_new') }}">
							<button class="rounded-md bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Ajouter un livre</button>
						</a>
					</div>
				</div>
			</div>
		</section>
	{% endif %}

	{% if books is empty %}
		<main class="grid h-screen place-items-center px-6 py-24 sm:py-32 lg:px-8">
		<div class="text-center">
			<h1 class="mt-4 text-3xl font-bold tracking-tight text-gray-900 sm:text-5xl">Vous n'avez pas de livre</h1>
			<p class="mt-6 text-base leading-7 text-gray-600">Ajoutez un livre pour commencer</p>
			<div class="mt-10 flex items-center justify-center gap-x-6">
				<a href="{{ path('app_book_new') }}" class="rounded-md bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Ajouter un livre</a>
			</div>
		</div>
	</main>
	{% endif %}
{% endblock %}
